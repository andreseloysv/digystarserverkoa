{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": [
      "node",
      "koa-bodyparser",
      "jest"
    ],
    "lib": [
      "es2017",
      "dom",
      "esnext"
    ]
  },
  // nur -.d.ts und Test-Dateien kompilieren
  "include": [
    "src/@types/**/*.d.ts",
    "**/__tests__/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}

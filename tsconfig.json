{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "types": [
        "node"
      ],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "target": "es2017",
      "strict": true,
      "outDir": "./build/js",
      "lib": ["es2017", "esnext"],
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      }
  },
  "compileOnSave": true,
  "include": ["src/@types/*", "**/*.ts"]
}